{
  "name": "electron-app",
  "version": "0.1.0",
  "private": true,
  "main": "dist/main/index.js",
  "scripts": {
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -b",
    "build:renderer": "vite build",
    "dev:main": "tsc -b -w",
    "dev:renderer": "vite",
    "dev:electron": "wait-on dist/main/index.js http://localhost:5173 && electron .",
    "dev:all": "concurrently \"npm run dev:main\" \"npm run dev:renderer\" \"npm run dev:electron\"",
    "start": "electron ."
  },
  "dependencies": {
    "better-sqlite3": "^11.5.0",
    "electron": "^40.1.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-window": "^1.8.11",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@types/better-sqlite3": "^7.6.9",
    "@types/react-window": "^1.8.8",
    "@types/ws": "^8.5.12",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.1",
    "typescript": "^5.9.3",
    "vite": "^7.0.0",
    "wait-on": "^7.2.0"
  }
}
